{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "app.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level}] ({Application}/{MachineName}/{ThreadId}) {SourceContext:l} {Scope} {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "LoaderToolConfiguration": {
    "MetadataTimeout": "00:00:05",
    "BootstrapServers": [
      "kafka-0.kafka-headless:9092",
      "kafka-1.kafka-headless:9092",
      "kafka-2.kafka-headless:9092",
      "kafka-3.kafka-headless:9092",
      "kafka-4.kafka-headless:9092",
      "kafka-5.kafka-headless:9092",
      "kafka-6.kafka-headless:9092"
    ],
    "Topics": [
      {
        "Name": "sports-external-running-ball",
        "KeyType": "Json",
        "Compacting": "On",
        "ExportFileName": "sports_external_running_ball.json"
      },
      {
        "Name": "categories-external-running-ball",
        "KeyType": "Json",
        "Compacting": "On",
        "ExportFileName": "categories_external_running_ball.json"
      },
      {
        "Name": "championships-external-running-ball",
        "KeyType": "Json",
        "Compacting": "On",
        "ExportFileName": "championships_external_running_ball.json"
      },
      {
        "Name": "teams-external-running-ball",
        "KeyType": "Json",
        "Compacting": "On",
        "ExportFileName": "teams_external_running_ball.json"
      },
      {
        "Name": "events-external-running-ball",
        "KeyType": "Json",
        "Compacting": "On",
        "ExportFileName": "events_external_running_ball.json"
      }
    ]
  }
}
