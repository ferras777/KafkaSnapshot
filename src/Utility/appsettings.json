{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "app.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level}] ({Application}/{MachineName}/{ThreadId}) {SourceContext:l} {Scope} {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "BootstrapServersConfiguration": {
    "BootstrapServers": [
      "kafka-0.kafka-headless:9092",
      "kafka-1.kafka-headless:9092",
      "kafka-2.kafka-headless:9092",
      "kafka-3.kafka-headless:9092",
      "kafka-4.kafka-headless:9092",
      "kafka-5.kafka-headless:9092",
      "kafka-6.kafka-headless:9092"
    ]
  },
  "TopicWatermarkLoaderConfiguration": {
    "AdminClientTimeout": "00:00:05"
  },
  "LoaderToolConfiguration": {
    "Topics": [
      {
        "Name": "sports-external-bet-radar",
        "KeyType": "Json",
        "Compacting": "On",
        "ExportFileName": "topic_test_3.json"
      }
    ]
  }
}
